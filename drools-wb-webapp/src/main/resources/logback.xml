<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <!-- %l lowers performance -->
      <!--<pattern>%d [%t] %-5p %l%n  %m%n</pattern>-->
      <pattern>%d [%t] %-5p %m%n</pattern>
    </encoder>
  </appender>

  <appender name="SIFT" class="ch.qos.logback.classic.sift.SiftingAppender">
    <!-- in the absence of the class attribute, it is assumed that the
         desired discriminator type is ch.qos.logback.classic.sift.MDCBasedDiscriminator -->
    <discriminator>
      <key>compileid</key>
      <defaultValue>unknown</defaultValue>
    </discriminator>
    <sift>
      <appender name="FILE-${userid}" class="ch.qos.logback.core.FileAppender">
        <file>${compileid}.log</file>
        <append>false</append>
        <layout class="ch.qos.logback.classic.PatternLayout">
          <pattern>%d [%thread] %level %mdc %logger{35} - %msg%n</pattern>
        </layout>
      </appender>
    </sift>
  </appender>


  <!--<logger name="org.kie" level="info"/>-->
  <logger name="org.drools" level="info"/>
  <logger name="org.guvnor" level="info"/>

  <logger name="org.kie.workbench.common.services.backend.compiler" level="info">
    <appender-ref ref="SIFT" />
  </logger>

  <logger name="org.apache.maven" level="info">
    <appender-ref ref="SIFT" />
  </logger>

  <logger name="org.uberfire.backend" level="debug" />

  <root level="error">
    <appender-ref ref="consoleAppender" />
  </root>

</configuration>

